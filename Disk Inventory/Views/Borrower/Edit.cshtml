@model Borrower
@{
    string title = ViewBag.Action + " Disk";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<!--Form to take new Data entries-->
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="date" class="form-control" />
    </div>
    <input type="hidden" asp-for="BorrowerId" />
    <br />
    <button type="submit" class="btn btn-secondary">@ViewBag.Action</button>
    <a asp-controller="Borrower" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>