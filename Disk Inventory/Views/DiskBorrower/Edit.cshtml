@model DiskBorrowerViewModel
@{
    string title = ViewBag.Action + " Disk";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<!--Form to take new Data entries-->
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group">
        <label asp-for="DiskId">Album Name</label>
        <select asp-for="DiskId" class="form-control">
            <option value="">Select a Album</option>
            @foreach (Disk d in Model.Disks)
            {
                <option value="@d.DiskId">@d.DiskName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowerId">Album Name</label>
        <select asp-for="BorrowerId" class="form-control">
            <option value="">Select a Album</option>
            @foreach (Borrower b in Model.Borrowers)
            {
                <option value="@b.BorrowerId">@b.LastName, @b.FirstName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowedDate">Borrowed Date</label>
        <input asp-for="BorrowedDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReturnedDate">Return Date</label>
        <input asp-for="ReturnedDate" type="date" class="form-control" placeholder="yyyy-mm-dd" />
    </div>
    <input type="hidden" asp-for="DiskBorrowerId" />
    <br />
    <button type="submit" class="btn btn-secondary">@ViewBag.Action</button>
    <a asp-controller="DiskBorrower" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>